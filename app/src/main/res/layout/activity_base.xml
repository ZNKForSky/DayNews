<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@mipmap/btn_1"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_base_activity_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_title_home_default"
            />
        <TextView
            android:id="@+id/tv_base_activity_title"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="资讯"/>
        <TextView
            android:id="@+id/tv_basge_comment"
            android:visibility="gone"
            android:background="#ffffff"
            android:layout_marginRight="30dp"
            android:text="717跟帖"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_base_activity_right"
            android:src="@mipmap/ic_title_share_default"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_activity_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></RelativeLayout>

</LinearLayout>